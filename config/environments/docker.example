# Docker环境配置示例
NODE_ENV=production
DOCKER_ENV=true

# 数据库配置 - 容器化部署
DATABASE_URL="mysql://lixin:password@db:3306/lixin"

# API服务配置 - 容器内部网络
OCR_API_URL="http://ocr-service:8002/v1"
TRANSLATE_API_URL="http://translate-service:8003/v1"

# 文件存储配置 - 容器内路径，通过volume挂载
PDF_UPLOAD_DIR="/app/data/uploads"
PDF_OUTPUT_DIR="/app/data/pdf-split"

# OCR和翻译输出目录 - 容器内路径
PDF_OCR_OUTPUT_DIR="/app/data/ocr"
PDF_TRANSLATE_OUTPUT_DIR="/app/data/translate"
PDF_IMAGES_OUTPUT_DIR="/app/data/images"

# 日志和临时目录
LOG_DIR="/app/logs"
TEMP_DIR="/app/temp"

# 容器特定配置
PORT=3000
HOST=0.0.0.0
