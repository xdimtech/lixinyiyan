# 数据库配置
DATABASE_URL=mysql://root:123456@localhost:3306/lixin
# 数据库时区设置 (使用UTC偏移量)
DB_TIMEZONE=+08:00
# 服务器时区
TZ=Asia/Shanghai
# 注意：MySQL2驱动使用timezone参数设置时区
# 最终的数据库连接URL会包含：
# ?charset=utf8mb4&timezone=%2B08%3A00&multipleStatements=true

# PDF处理相关目录配置
PDF_UPLOAD_DIR=~/data/lixin/uploads
PDF_OUTPUT_DIR=~/data/lixin/uploads/pdf-split
PDF_IMAGES_OUTPUT_DIR=~/data/lixin/images
PDF_OCR_OUTPUT_DIR=~/data/lixin/ocr
PDF_TRANSLATE_OUTPUT_DIR=~/data/lixin/translate
# 其他环境变量
NODE_ENV=development
